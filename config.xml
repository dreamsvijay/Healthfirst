<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.HealtyVillage.Yosi" version="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" versionCode="1">
  <name>Healthy Village</name>
  <description>
        Healthy Village is an intermediate app that connects doctors and patient.
    </description>
    <author email="dreamguystech@gmail.com" href="http://dreamguys.co.in/">
        DreamGuy's
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <allow-navigation href="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <preference name="fullscreen" value="false"/>
  <preference name="Orientation" value="default"/>
  <preference name="target-device" value="universal"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="AllowInlineMediaPlayback" value="true"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-targetSdkVersion" value="21"/>
  <preference name="ErrorUrl" value=""/>
  <preference name="KeepRunning" value="true"/>
  <preference name="LoadUrlTimeoutValue" value="20000"/>
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <preference name="StatusBarBackgroundColor" value="#c12828"/>
  <preference name="StatusBarStyle" value="lightcontent"/>
  <preference name="SplashScreenBackgroundColor" value="#000"/>
  <preference name="AutoHideSplashScreen" value="true"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashMaintainAspectRatio" value="true"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
  <feature name="FileTransfer">
    <param name="ios-package" value="CDVFileTransfer"/>
  </feature>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <feature name="Keyboard">
    <param name="ios-package" value="IonicKeyboard" onload="true"/>
  </feature>
  <feature name="SplashScreen">
    <param name="ios-package" value="CDVSplashScreen"/>
    <param name="android-package" value="cordova-plugin-splashscreen"/>
  </feature>
  <feature name="SocialSharing">
    <param name="ios-package" value="SocialSharing"/>
  </feature>
  <feature name="SocialSharing">
    <param name="android-package" value="nl.xservices.plugins.SocialSharing"/>
  </feature>
  <platform name="ios">
	<icon height="60" width="60" src="resources/ios/icon/icon-60.png" />
	<icon height="120" width="120" src="resources/ios/icon/icon-60-2x.png" />
	<icon height="180" width="180" src="resources/ios/icon/icon-60-3x.png" />
	<icon height="76" width="76" src="resources/ios/icon/icon-76.png" />
	<icon height="152" width="152" src="resources/ios/icon/icon-76-2x.png" />
	<icon height="40" width="40" src="resources/ios/icon/icon-40.png" />
	<icon height="80" width="80" src="resources/ios/icon/icon-40-2x.png" />
	<icon height="57" width="57" src="resources/ios/icon/icon-57.png" />
	<icon height="114" width="114" src="resources/ios/icon/icon-57-2x.png" />
	<icon height="72" width="72" src="resources/ios/icon/icon-72.png" />
	<icon height="144" width="144" src="resources/ios/icon/icon-72-2x.png" />
	<icon height="29" width="29" src="resources/ios/icon/icon-small.png" />
	<icon height="58" width="58" src="resources/ios/icon/icon-small-2x.png" />
	<icon height="50" width="50" src="resources/ios/icon/icon-50.png" />
	<icon height="100" width="100" src="resources/ios/icon/icon-50-2x.png" />
	
	<splash height="480" width="320" src="resources/ios/splash/screen-iphone-portrait.png" />
	<splash height="960" width="640" src="resources/ios/splash/screen-iphone-portrait-2x.png" />
	<splash height="1024" width="768" src="resources/ios/splash/screen-ipad-portrait.png" />
	<splash height="2048" width="1536" src="resources/ios/splash/screen-ipad-portrait-2x.png" />
	<splash height="768" width="1024" src="resources/ios/splash/screen-ipad-landscape.png" />
	<splash height="1536" width="2048" src="resources/ios/splash/screen-ipad-landscape-2x.png" />
	<splash height="1136" width="640" src="resources/ios/splash/screen-iphone-568h-2x.png" />
	<splash height="1334" width="750" src="resources/ios/splash/screen-iphone-portrait-667h.png" />
	<splash height="2208" width="1242" src="resources/ios/splash/screen-iphone-portrait-736h.png" />
	<splash height="1242" width="2208" src="resources/ios/splash/screen-iphone-landscape-736h.png" />
  </platform>
  <platform name="android">
    <icon src="resources/android/icon/icon-36-ldpi.png" density="ldpi"/>
    <icon src="resources/android/icon/icon-48-mdpi.png" density="mdpi"/>
    <icon src="resources/android/icon/icon-72-hdpi.png" density="hdpi"/>
    <icon src="resources/android/icon/icon-96-xhdpi.png" density="xhdpi"/>
    <icon src="resources/android/icon/icon-144-xxhdpi.png" density="xxhdpi"/>
    <icon src="resources/android/icon/icon-192-xxxhdpi.png" density="xxxhdpi"/>
	
    <splash src="resources/android/splash/screen-ldpi-landscape" density="land-ldpi"/>
    <splash src="resources/android/splash/screen-mdpi-landscape" density="land-mdpi"/>
    <splash src="resources/android/splash/screen-hdpi-landscape.png" density="land-hdpi"/>
    <splash src="resources/android/splash/screen-xhdpi-landscape.png" density="land-xhdpi"/>
    <!--<splash src="resources/android/splash/drawable-land-xxhdpi-screen.png" density="land-xxhdpi"/>
    <splash src="resources/android/splash/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi"/>-->
    <splash src="resources/android/splash/screen-ldpi-portrait.png" density="port-ldpi"/>
    <splash src="resources/android/splash/screen-mdpi-portrait.png" density="port-mdpi"/>
    <splash src="resources/android/splash/screen-hdpi-portrait.png" density="port-hdpi"/>
    <splash src="resources/android/splash/screen-xhdpi-portrait.png" density="port-xhdpi"/>
    <!--<splash src="resources/android/splash/drawable-port-xxhdpi-screen.png" density="port-xxhdpi"/>
    <splash src="resources/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi"/>-->	
  </platform>
  <platform name="ios">
    <config-file platform="ios" target="*-Info.plist" parent="NSAppTransportSecurity">
      <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
      </dict>
    </config-file>
  </platform>
  <icon src="resources/android/icon/icon-96-xhdpi.png"/>
</widget>
